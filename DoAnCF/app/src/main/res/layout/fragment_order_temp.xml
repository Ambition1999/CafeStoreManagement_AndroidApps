        <LinearLayout
            android:id="@+id/linner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_DangMo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang mở"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_orange_light"
                />

            <Button
                android:id="@+id/btn_TangTret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tầng trệt"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_orange_light"
                />

            <Button
                android:id="@+id/btn_Tang1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tầng 1"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_orange_light"
                />
        </LinearLayout>

        <GridView
            android:id="@+id/gridViewOdred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linner1"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:columnWidth="250dp"
            android:horizontalSpacing="20dp"
            android:numColumns="2"
            android:verticalSpacing="10dp"></GridView>

        <LinearLayout
            android:layout_below="@+id/gridViewOdred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/trangorder_tvTongSoBan"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Tổng số bàn: " />
        </LinearLayout>

        <ImageButton
